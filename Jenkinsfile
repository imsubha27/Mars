pipeline{
    agent any
    
    environment {
        name = "Subhankar Das"
        job = "Devops Engineer"
        year = "2022"
    }
    stages{
        stage('Hello')
        {
            steps
            {
                echo "Hello my name is $name and I am $job."
            }
        }
        stage('Education'){
            steps{
                echo "I completed my graduation in $year."
            }
        }
    }
}
